@model Modelo.Tabelas.Endereco
@{
    ViewBag.Title = "Meus Endereços";
    Layout = "~/Areas/Usuarios/Views/Shared/_LayoutDados.cshtml";
}

@section styles{
    <script src="https://code.jquery.com/jquery-3.5.1.js" integrity="sha256-QWo7LDvxbWT2tbbQ97B53yJnYU3WhH/C8ycbRAkjPDc=" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="~/Content/minha_conta.css">
}
<section class="container-enderecos">
    <div class="cabecalho-topico">
        <h3>Endereços</h3>
    </div>
    <div class="container-enderecos-cadastrados">
        <div class="content-flex">
            @using (Html.BeginForm("GravarEndereco", "Endereco", FormMethod.Post, new { @class = "content-flex" }))
            {
                <div class="dados-endereco">
                    <div>
                        <label for="logradouro">Logradouro</label>
                        @Html.EditorFor(model => model.Logradouro, new { htmlAttributes = new { @id = "logradouro", @type = "text", maxlength = "130", @placeholder = "Digite seu logradouro" } })
                    </div>
                    <div>
                        <label for="bairro">Bairro</label>
                        @Html.EditorFor(model => model.Bairro, new { htmlAttributes = new { @id = "bairro", @type = "text", @placeholder = "Digite seu bairro" } })
                    </div>
                    <div>
                        <label for="estado">Estado</label>
                        @Html.EditorFor(model => model.Estado, new { htmlAttributes = new { @id = "estado", @type = "text", @placeholder = "Selecione seu estado" } })
                    </div>
                    <div>
                        <label for="cidade">Cidade</label>
                        @Html.EditorFor(model => model.Cidade, new { htmlAttributes = new { @id = "cidade", @type = "text", @placeholder = "Selecione sua cidade" } })
                    </div>
                </div>
                <div class="dados-endereco">
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(model => model.Id)
                    <div>
                        <label for="numero">Número</label>
                        @Html.EditorFor(model => model.Numero, new { htmlAttributes = new { @id = "numero", @type = "text", @placeholder = "0000" } })
                    </div>
                    <div>
                        <label for="complemento">Complemento</label>
                        @Html.EditorFor(model => model.Complemento, new { htmlAttributes = new { @id = "complemento", @type = "text", @placeholder = "Digite um complemento" } })
                    </div>
                    <div>
                        <label for="cep">CEP</label>
                        @Html.EditorFor(model => model.Cep, new { htmlAttributes = new { @id = "cep", @type = "text", @placeholder = "000000-000" } })
                    </div>
                    <input type="submit" class="button-edit-endereco" value="Salvar Endereço">
                </div>
            }
        </div>
    </div>
</section>
@section scripts{
    <script src="~/Scripts/bootbox.min.js"></script>
    <script src="~/Content/js/jquery-3.5.1.min.js"></script>
    <script src="~/Content/js/cep_auto.js"></script>
    <script src="https://kit.fontawesome.com/27079de5c2.js" crossorigin="anonymous"></script>
    <script src="~/Content/js/endereço-dadospessoais.js"></script>
    <script src="~/Content/js/main.js"></script>
    <script>
        $(function () {
            console.log($('.active'));
            $('.active').removeClass('active');
            $("#meusenderecos").addClass('active');
        });
    </script>
}


