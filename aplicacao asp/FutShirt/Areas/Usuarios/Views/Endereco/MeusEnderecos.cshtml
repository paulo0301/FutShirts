@model IEnumerable<Modelo.Tabelas.Endereco>

@{
    ViewBag.Title = "Meus Endereços";
    Layout = "~/Areas/Usuarios/Views/Shared/_Layout.cshtml";
}

@section styles{
    <script src="https://code.jquery.com/jquery-3.5.1.js" integrity="sha256-QWo7LDvxbWT2tbbQ97B53yJnYU3WhH/C8ycbRAkjPDc=" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="~/Content/minha_conta.css">
}
<main>
    <div class="cabecalho">
        <h2>Minha Conta</h2>
    </div>
    <nav class="voltar-index">
        <h2><a href="index.html"><i class="fas fa-angle-left"></i>voltar</a></h2>
    </nav>
    <div>
        <nav>
            <ol>
                <li><a href="meus_dados.html"><img src="~/Content/Images/carteirinha.svg" alt="">Meus dados</a></li>
                <li><a href="enderecos_minha_conta.html" class="active"><img src="~/Content/Images/enderecos.svg" alt="">Endereços</a></li>
                <li><a href="meus_pedidos.html"><img src="~/Content/Images/camisa_pedidos.svg" alt="">Meus pedidos</a></li>
                <li><a href="meus_favoritos.html"><img src="~/Content/Images/estrela.svg" alt="">Favoritos</a></li>
                <li><a href="meus_cartoes.html"><img src="~/Content/Images/cartoes.svg" alt="">Meus cartões</a></li>
            </ol>
        </nav>
        <section class="container-enderecos">
            <div class="cabecalho-topico">
                <h3>Endereços</h3>
            </div>
            <div class="container-btn-criar">
                <a href="@Url.Action("CreateEndereco", "Endereco")" class="btn-criar">Adicionar Endereço</a>
            </div>
            <div class="container-enderecos-cadastrados">
                @foreach (var item in Model)
                {
                    <div class="endereco-cadastrado">
                        <p class="cep">CEP: @item.Cep</p>
                        <p class="descricao-1">@item.Logradouro, @item.Numero @item.Complemento, @item.Bairro</p>
                        <p class="descricao-2">@item.Cidade - @item.Estado</p>

                        <div>
                            @Html.ActionLink("Alterar", "EditEndereco", new { id = item.Id }, new { @class= "btn-editar" })
                            @Html.ActionLink("Eliminar", "DeleteEndereco", new { id = item.Id }, new { @class = "btn-apagar" })
                        </div>
                    </div>
                }
            </div>

            
        </section>
    </div>
</main>
@section scripts{
    <script src="~/Scripts/bootbox.min.js"></script>
    <script src="~/Content/js/jquery-3.5.1.min.js"></script>
    <script src="~/Content/js/cep_auto.js"></script>
    <script src="https://kit.fontawesome.com/27079de5c2.js" crossorigin="anonymous"></script>
    <script src="~/Content/js/endereço-dadospessoais.js"></script>
    <script src="~/Content/js/main.js"></script>
}


