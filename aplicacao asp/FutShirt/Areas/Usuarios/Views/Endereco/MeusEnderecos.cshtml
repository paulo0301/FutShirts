@model IEnumerable<Modelo.Tabelas.Endereco>

@{
    ViewBag.Title = "Meus Endereços";
    Layout = "~/Areas/Usuarios/Views/Shared/_LayoutDados.cshtml";
}

@section styles{
    <script src="https://code.jquery.com/jquery-3.5.1.js" integrity="sha256-QWo7LDvxbWT2tbbQ97B53yJnYU3WhH/C8ycbRAkjPDc=" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="~/Content/minha_conta.css">
}
<style>
    .collapsible {
        background-color: #77A1D9;
        color: #fff;
        font-weight: 500;
        cursor: pointer;
        padding: 18px;
        width: 100%;
        border: none;
        text-align: left;
        outline: none;
        font-size: 1.1rem;
        line-height: 1rem;
    }

    .active, .collapsible:hover {
        background-color: #638bbf;
    }

    .content {
        padding: 0 18px;
        background-color: white;
        max-height: 0;
        overflow: hidden;
        transition: max-height 0.2s ease-out;
    }

    .collapsible:after {
        content: '\f107'; 
        font-size: 1.7rem;
        float: right;
        margin-left: 5px;
        font-family: "Font Awesome 5 Free";
        font-weight: 900;

    }

    .active:after {
        content: "\f106";
    }
</style>
<section class="container-enderecos">
    <div class="cabecalho-topico">
        <h3>Endereços</h3>
    </div>
    <div class="container-btn-criar">
        <a href="@Url.Action("CreateEndereco", "Endereco")" class="btn-criar">Adicionar Endereço</a>
    </div>
    <div class="container-enderecos-cadastrados">
        <p>@ViewBag.Error</p>
        @foreach (var item in Model)
        {
            <div class="endereco-cadastrado">
                <p class="cep">CEP: @item.Cep</p>
                <p class="descricao-1">@item.Logradouro, @item.Numero @item.Complemento, @item.Bairro</p>
                <p class="descricao-2">@item.Cidade - @item.Estado</p>

                <div>
                    @Html.ActionLink("Alterar", "EditEndereco", new { id = item.Id }, new { @class = "btn-editar" })
                    @Html.ActionLink("Eliminar", "DeleteEndereco", new { id = item.Id }, new { @class = "btn-apagar" })
                </div>
            </div>
        }
    </div>
    <button type="button" class="collapsible">Adicionar Endereço</button>
    @Html.Partial("~/Areas/Usuarios/Views/Endereco/_PartialAdicionarEndereco.cshtml", new Modelo.Tabelas.Endereco());
</section>
@section scripts{
    <script src="~/Scripts/bootbox.min.js"></script>
    <script src="~/Content/js/jquery-3.5.1.min.js"></script>
    <script src="~/Content/js/cep_auto.js"></script>
    <script src="https://kit.fontawesome.com/27079de5c2.js" crossorigin="anonymous"></script>
    <script src="~/Content/js/endereço-dadospessoais.js"></script>
    <script src="~/Content/js/main.js"></script>
    <script>
        $(function () {
            console.log($('.active'));
            $('.active').removeClass('active');
            $("#meusenderecos").addClass('active');
        });

        var coll = document.getElementsByClassName("collapsible");
        var i;

        for (i = 0; i < coll.length; i++) {
            coll[i].addEventListener("click", function () {
                this.classList.toggle("active");
                var content = this.nextElementSibling;
                if (content.style.maxHeight) {
                    content.style.maxHeight = null;
                } else {
                    content.style.maxHeight = content.scrollHeight + "px";
                }
            });
        }
    </script>
}


