@model Modelo.Tabelas.Usuario
@{
    ViewBag.Title = "FutShirt - Meus dados";
    Layout = "~/Areas/Usuarios/Views/Shared/_LayoutDados.cshtml";
}
@section styles{
    <link rel="stylesheet" href="~/Content/minha_conta.css">
}
<section class="container-meus-dados">
    <div class="cabecalho-topico">
        <h3>Meus dados</h3>
        <a class="btn-icon-edit" href="@Url.Action("EditarUsuario", "Usuario", new { id = Model.Id })"><i class="far fa-edit"></i></a>
    </div>
    <div class="dados">
        <div class="dados-pessoais">
            <h4>Dados pessoais</h4>
                @Html.AntiForgeryToken()
                @Html.HiddenFor(model => model.Id)
                @Html.HiddenFor(model => model.Email)
                @Html.HiddenFor(model => model.Senha)
                @Html.HiddenFor(model => model.ConfirmarSenha)
                @Html.HiddenFor(model => model.ContaAtiva)
                <div>
                    <label for="nome-completo">Nome completo</label>
                    @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "input-display", @id = "nome-completo", @type = "text", maxlength = "130", @readonly = "readonly" } })
                </div>
                <div>
                    <label for="data-nascimento">Data de nascimento</label>
                    @Html.EditorFor(model => model.DataNascimento, new { htmlAttributes = new { @class = "input-display", @id = "data-nascimento", @type = "text", @readonly = "readonly" } })
                </div>
                <div>
                    <label for="cpf">CPF</label>
                    @Html.EditorFor(model => model.Cpf, new { htmlAttributes = new { @class = "input-display", @id = "cpf", onloadeddata = "mascara(this, '###.###.###-##')", @type = "text", maxlength = "14", @readonly = "readonly" } })
                </div>
                <div>
                    <label for="telefone">Telefone</label>
                    @Html.EditorFor(model => model.Telefone, new { htmlAttributes = new { @class = "input-display", @id = "telefone", @type = "text", maxlength = "130", @readonly = "readonly" } })
                </div>
        </div>
        <div class="dados-acesso">
            <h4>Dados de acesso</h4>
                <div>
                    <label for="email">Email</label>
                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "input-display", @id = "email", @type = "text", @readonly = "readonly" } })
                </div>
                <div class="account-disable">
                    @Html.ActionLink("Desativar conta", "DesativarConta", new { id = Model.Id })
                </div>
        </div>
    </div>
</section>
@section scripts{
    <script src="https://kit.fontawesome.com/27079de5c2.js" crossorigin="anonymous"></script>
    <script src="~/Content/js/main.js"></script>
    <script>
        $(function () {
            $("#telefone").inputmask("(99) 99999-9999");
            $("#cpf").inputmask("999.999.999-99");
            $('.active').removeClass('.active');
            $("#meusdados").addClass('.active');
        });
    </script>
}