<!DOCTYPE html>

<html>
<head>
    <meta charset="UTF-8">
    <link rel="icon" type="image/svg" href="~/Content/Images/logo-icon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/Content/header-footer.css">
    <title>@ViewBag.Title</title>
</head>
<body>
    <div class="efeito">
        <div class="login">
            <input type="submit" id="fechar" value="x" />
            <form>
                <div class="container">
                    <h2>Já sou cliente</h2>
                    <div>
                        <label for="login">E-mail</label>
                        <input type="email" id="login" required />
                    </div>

                    <div>
                        <label for="senha">Senha</label>
                        <input type="password" id="senha" required />
                    </div>

                    <a href="">Esqueci minha senha</a>
                </div>
                <div class="container-entrar-cadastre-se">
                    <input type="submit" id="entrar_login" value="Entrar">
                    <a href="@Url.Action("Index", "Cadastro")">Cadastre-se</a>
                </div>
            </form>
        </div>
    </div>
    <header>
        <div class="link-atendimento">
            <a href="#">
                <img src="~/Content/Images/question-mark-inside-a-circle.svg" alt="">
                <p>Atendimento</p>
            </a>
        </div>
        <div class="header-principal">
            <a href="@Url.Action("Index", "Index")"><figure class="logotipo"><img src="~/Content/Images/logo.svg" alt="logotipo"></figure></a>

            <form action="" class="barra-de-pesquisa">
                <input type="text" name="buscar" id="buscar" placeholder="Buscar">
                <img src="~/Content/Images/ampliacao.svg" alt="">
            </form>

            <div>
                <div class="area-de-acesso">
                    <figure>
                        <img src="~/Content/Images/avatar.svg" alt="user">
                    </figure>
                    <div>
                        <input type="submit" id="entrar" value="Entrar">
                        <a href="@Url.Action("Index", "Cadastro")">Cadastre-se</a>
                    </div>
                </div>

                <a href="#">
                    <figure class="sacola">
                        <img src="~/Content/Images/sacola-de-compras.svg" alt="sacola de compras">
                    </figure>
                </a>
            </div>
        </div>
    </header>
    <nav>
        <ol>
            <li><a href="#">Masculino</a></li>
            <li><a href="#">Feminino</a></li>
            <li><a href="#">Infantil</a></li>
        </ol>
    </nav>
    <main>
        @RenderBody()
    </main>
    <footer>
        <section class="vantagens">
            <ul>
                <li>
                    <figure>
                        <img src="~/Content/Images/bags.svg" alt="">
                        <figcaption>FRETE GRÁTIS PARA TODO O BRASIL</figcaption>
                    </figure>
                </li>
                <li>
                    <figure>
                        <img src="~/Content/Images/tag.svg" alt="">
                        <figcaption>DESCONTO NA PRIMEIRA COMPRA</figcaption>
                    </figure>
                </li>
                <li>
                    <figure>
                        <img src="~/Content/Images/trophy.svg" alt="">
                        <figcaption>MATERIAL DE EXCELÊNCIA</figcaption>
                    </figure>
                </li>
                <li>
                    <figure>
                        <img src="~/Content/Images/credit-card.svg" alt="">
                        <figcaption>PARCELAMOS EM X VEZES</figcaption>
                    </figure>
                </li>
                <li>
                    <figure>
                        <img src="~/Content/Images/football-shirt.svg" alt="">
                        <figcaption>PERSONALIZE COMO QUISER</figcaption>
                    </figure>
                </li>
            </ul>
        </section>
        <section class="rodape">
            <ol>
                <li>
                    <ol>
                        <li class="destaque">Institucional</li>
                        <li><a href="#">Nossos termos</a></li>
                        <li><a href="#">Política de privacidade</a></li>
                        <li><a href="#">Quem somos</a></li>
                    </ol>
                </li>
                <li>
                    <ol>
                        <li class="destaque">Ajuda</li>
                        <li><a href="#">Política de ajuda</a></li>
                        <li><a href="#">Portal de ajuda</a></li>
                    </ol>
                </li>
                <li>
                    <ol>
                        <li class="destaque"><a href="./Pag_Ajuda.html">Contato</a></li>
                        <li><a href="#">Atendimento</a></li>
                        <li><a href="./Pag_Ajuda_Whatsapp.html">WhatsApp (88) 8888-8888</a></li>
                        <li><a href="#">Televendas (88) 8888-8888</a></li>
                        <li><a href="#">Chat</a></li>
                        <li><a href="./Pag_Ajuda_Email.html">Enviar e-mail</a></li>
                    </ol>
                </li>
                <li>
                    <ol>
                        <li class="destaque">Formas de Pagamento</li>
                        <li>
                            <ul class="formas-de-pagamento">
                                <li><img src="~/Content/Images/boleto.svg" alt=""></li>
                                <li><img src="~/Content/Images/visa.svg" alt=""></li>
                                <li><img src="~/Content/Images/mastercard.svg" alt=""></li>
                                <li><img src="~/Content/Images/elo.svg" alt=""></li>
                                <li><img src="~/Content/Images/hipercard.svg" alt=""></li>
                                <li><img src="~/Content/Images/paypal.svg" alt=""></li>
                            </ul>
                        </li>
                    </ol>
                </li>
                <li>
                    <p class="destaque">Redes Sociais</p>
                    <ol class="redes-sociais">
                        <li><a href="#"><img src="~/Content/Images/logotipo-do-instagram.svg" alt=""></a></li>
                        <li><a href="#"><img src="~/Content/Images/facebook.svg" alt=""></a></li>
                        <li><a href="#"><img src="~/Content/Images/twitter.svg" alt=""></a></li>
                    </ol>
                </li>
            </ol>
            <p class="destaque">Copyright ©2020 FutShirt Todos direitos reservados</p>
        </section>
    </footer>
</body>
</html>

