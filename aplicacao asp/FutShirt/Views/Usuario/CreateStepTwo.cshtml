@model Modelo.Tabelas.Usuario
@{ ViewBag.Title = "FutShirt";
    Layout = "~/Views/Shared/_Layout.cshtml"; }

@section styles{
    <link rel="stylesheet" href="~/Content/cadastro.css">
}
<main>
    <div class="cabecalho">
        <h2>Confirmar Cadastro</h2>
        <div class="breadcrumbs">
            <a href="#">Dados Pessoais</a>
            <a href="#" class="active">Confirmar Email</a>
            <a href="#">Endereço</a>
        </div>
    </div>

    <section>
        <div class="instrucoes-cadastro">
            <p>
                <b>Digite o código que enviamos por email</b><br />Para confirmar de que se trata de seu<br />email,
                enviamos para<br /><b>@Html.LabelFor(model => model.Email)</b> Caso não o<br />encontre, confira sua pasta de spam.
            </p>
            @using (Html.BeginForm("CreateStepTwo", "Usuario", FormMethod.Post, new { @class = "confirmar-cadastro" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                @Html.EditorFor(model => model.CodigoAtivacao, new { htmlAttributes = new { @type = "text", id = "codigoAtivacao", @class = "input-field", autocomplete = "off", maxlength = "6", required = "required" } })
                @Html.ValidationMessageFor(model => model.CodigoAtivacao, "", new { @class = "text-danger" })
                <div>
                    <input type="submit" value="Confirmar">
                </div>
            }
        </div>
    </section>
</main>
@section scripts{
    <script src="~/Content/js/main.js"></script>
    <script src="~/Content/js/confcadastro.js"></script>
    <script src="https://kit.fontawesome.com/27079de5c2.js" crossorigin="anonymous"></script>
}