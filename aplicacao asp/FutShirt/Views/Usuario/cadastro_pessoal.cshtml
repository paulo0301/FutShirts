@model FutShirt.Models.Usuario
@{ ViewBag.Title = "FutShirt";
    Layout = "~/Views/Shared/_Layout.cshtml"; }

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <link rel="icon" type="image/svg" href="~/Content/Images/logo-icon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/Content/main.css">
    <link rel="stylesheet" href="~/Content/cadastro.css">
</head>
<body>
    <main>
        <div class="cabecalho">
            <h2>Dados Pessoais</h2>
            <div class="breadcrumbs">
                <a href="#" class="active">Dados Pessoais</a>
                <a href="#">Confirmar Email</a>
                <a href="#">Endereço</a>
            </div>
        </div>
        <article>
            @using (Html.BeginForm("CreateStepOne", "Usuario", FormMethod.Post, new { @class = "dados" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="dados-cadastro">
                    @Html.LabelFor(model => model.nome)
                    <div class="dados-preencher">
                        <i class="fas fa-user icon"></i>
                        @Html.EditorFor(model => model.nome, new{htmlAttributes = new { @type="text", id="name", @class = "input-field", autocomplete = "off", required = "required" } })
                        @Html.ValidationMessageFor(model => model.nome, "nome invalido", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="dados-cadastro">
                    <label for="email">Email</label>
                    <div class="dados-preencher">
                        <i class="fas fa-at icon"></i>
                        @Html.EditorFor(model => model.email, new { htmlAttributes = new { @type = "email", id = "email", @class = "input-field", autocomplete = "off", required = "required" } })
                        @Html.ValidationMessageFor(model => model.email, "email invalido", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="dados-cadastro">
                    <label for="tel">Telefone</label>
                    <div class="dados-preencher">
                        <i class="fas fa-phone-alt icon"></i>
                        @Html.EditorFor(model => model.telefone, new { htmlAttributes = new { @type = "tel", id = "telefone", @class = "input-field", autocomplete = "off", onkeypress = "mascara(this, '###.###.###-##')", placeholder = "(00) 00000-0000", maxlength = "13", required = "required" } })
                        @Html.ValidationMessageFor(model => model.telefone, "telefone invalido", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="dados-cadastro">
                    <label for="cpf">CPF</label>
                    <div class="dados-preencher">
                        <i class="fas fa-id-card icon"></i>
                        @Html.EditorFor(model => model.cpf, new { htmlAttributes = new { @type = "text", id = "cpf", @class = "input-field", autocomplete = "off", onkeypress = "mascara(this, '###.###.###-##')", placeholder = "000.000.000-00", maxlength = "14", required = "required" } })
                        @Html.ValidationMessageFor(model => model.cpf, "cpf invalido", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="dados-cadastro">
                    <label for="nasc">Data de nascimento</label>
                    <div class="dados-preencher">
                        <i class="fas fa-calendar-alt icon"></i>
                        @Html.EditorFor(model => model.nascimento, new { htmlAttributes = new { @type = "text", id = "nascimento", @class = "input-field", autocomplete = "off", onkeypress = "mascara(this, '##/##/####')", placeholder = "00/00/0000", maxlength = "10", required = "required" } })
                        @Html.ValidationMessageFor(model => model.nascimento, "nascimento invalido", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="dados-cadastro">
                    <label for="senha">Senha</label>
                    <div class="dados-preencher">
                        <i class="fas fa-unlock-alt icon"></i>
                        @Html.EditorFor(model => model.senha, new { htmlAttributes = new { id = "senha", @type="password", @class = "input-field", autocomplete = "off", placeholder = "Digite sua senha", required = "required" } })
                        @Html.ValidationMessageFor(model => model.senha, "senha invalido", new { @class = "text-danger" }) 
                    </div>
                </div>
                <div class="dados-cadastro">
                    <label for="confsenha">Confirmar senha</label>
                    <div class="dados-preencher">
                        <i class="fas fa-unlock-alt icon"></i>
                        @Html.EditorFor(model => model.senha, new { htmlAttributes = new { id = "confsenha", @type = "password", @class = "input-field", autocomplete = "off", placeholder = "Digite novamente sua senha", required = "required" } })
                        @Html.ValidationMessageFor(model => model.senha, "senha invalido", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="bt-container">
                    <input type="submit" id="conf" value="Prosseguir" onclick="proseg(event)" />
                </div>
            }
        </article>
    </main>
</body>
</html>
<script src="~/Content/js/main.js"></script>
<script src="~/Content/js/endereço-dadospessoais.js"></script>
<script src="https://kit.fontawesome.com/27079de5c2.js" crossorigin="anonymous"></script>