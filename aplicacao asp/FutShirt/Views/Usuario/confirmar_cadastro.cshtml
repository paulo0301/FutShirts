@model FutShirt.Models.Usuario
@{ ViewBag.Title = "FutShirt";
    Layout = "~/Views/Shared/_Layout.cshtml"; }
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <link rel="icon" type="image/svg" href="~/Content/Images/logo-icon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/Content/main.css">
    <link rel="stylesheet" href="~/Content/cadastro.css">
</head>
<body>
    <div class="cabecalho">
        <h2>Confirmar Cadastro</h2>
        <div class="breadcrumbs">
            <a href="#">Dados Pessoais</a>
            <a href="#" class="active">Confirmar Email</a>
            <a href="#">Endereço</a>
        </div>
    </div>

    <section>
        <div class="instrucoes-cadastro">
            <p>
                <b>Digite o código que enviamos por email</b><br />Para confirmar de que se trata de seu<br />email,
                enviamos para<br /><b>usuario@email.com.</b> Caso não o<br />encontre, confira sua pasta de spam.
            </p>

            @using (Html.BeginForm("CreateStepThree", "Usuario", FormMethod.Post, new { @class = "confirmar-cadastro" }))
            {
                @Html.EditorFor(model => model.nome, new{htmlAttributes = new { @class = "form-control", disabled = "disabled" }})
                <input type="text" name="codigoEmail" maxlength="6" required autocomplete="off">
                <div>
                    <input type="submit" value="Confirmar">
                </div>
            }
        </div>
    </section>
</body>
</html>
<script src="~/Content/js/main.js"></script>
<script src="~/Content/js/confcadastro.js"></script>
<script src="https://kit.fontawesome.com/27079de5c2.js" crossorigin="anonymous"></script>